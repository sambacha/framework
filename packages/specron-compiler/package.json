{
  "name": "@specron/compiler",
  "version": "0.17.1",
  "description": "Solidity contract compiler for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ],
    "timeout": "1m"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "2.0.3",
    "@types/fs-extra": "9.0.6",
    "@types/node": "14.14.20",
    "ava": "3.15.0",
    "nyc": "15.1.0",
    "solc": "0.6.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "@specron/flattener": "0.17.1",
    "@hayspec/reporter": "0.10.0",
    "fast-glob": "3.2.4",
    "fs-extra": "9.0.1"
  },
  "peerDependencies": {
    "solc": "*"
  }
}
